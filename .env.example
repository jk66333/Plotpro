# Security Configuration Template
# Copy this to .env and fill in with secure values

# Flask Secret Key (Generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_change_this_to_64_character_random_string

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_strong_database_password_here
DB_NAME=receipt_app

# Encryption Key for Sensitive Data (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here

# Session Configuration
SESSION_TIMEOUT_HOURS=2

# Security Settings
ENABLE_RATE_LIMITING=True
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_DIRECTORY=/path/to/backups
BACKUP_RETENTION_DAYS=30

# Email Configuration (for security alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SECURITY_EMAIL=admin@yourdomain.com
