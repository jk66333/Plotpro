    selected_project = selected_project or request.args.get('project')
    if selected_project:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()
        c.execute("SELECT total_plots, plots_to_landowners FROM projects WHERE name = ?", (selected_project,))
        row = c.fetchone()
        if row:
            project_data = {
                'total_plots': row[0] or 0,
                'plots_to_landowners': row[1] or 0
