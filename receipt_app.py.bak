                like = f"%{plot_no}%"
                query = "SELECT * FROM receipts WHERE plot_no LIKE ?"
                params = [like]
                if project_name:
                    query += " AND project_name = ?"
                    params.append(project_name)
                query += " ORDER BY id DESC"
                
                c.execute(query, tuple(params))
                rows = c.fetchall()

            conn.close()

            results = []
            for row in rows:
                r = dict_from_row(row)
                r["amount_formatted"] = format_inr(r["amount_numeric"])
                results.append(r)

