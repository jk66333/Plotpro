@app.route("/api/stats/agent_earnings_by_month")
def stats_agent_earnings_by_month():
    """Return total earnings per month for each Agent, calculated as commission_rate * square_yards.
    
    Joins receipts with commissions to get agent_rate per receipt.
    Respects optional ?project= filter.
    """
    if not (session.get("role") == "admin" or session.get("can_view_dashboard")):
        abort(403)

    selected_project = request.args.get("project", "").strip()

    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()

    query = """
        SELECT
            strftime('%Y-%m', r.date) AS ym,
            COALESCE(c.agent_name, 'Unknown') AS agent_name,
            COALESCE(SUM(c.agent_rate * CAST(COALESCE(NULLIF(TRIM(r.square_yards), ''), '0') AS REAL)), 0.0) AS earnings
        FROM receipts r
        LEFT JOIN commissions c ON r.project_name = c.project_name AND r.plot_no = c.plot_no
        WHERE r.date IS NOT NULL AND TRIM(r.date) != ''
    """
    params = []

    if selected_project:
        query += " AND r.project_name = ?"
        params.append(selected_project)

    query += " GROUP BY ym, agent_name ORDER BY ym ASC, earnings DESC"

    c.execute(query, params)
    rows = c.fetchall()
    conn.close()

    # Group by month, then list agents and earnings
    monthly_data = {}
    for ym, agent_name, earnings in rows:
        if ym not in monthly_data:
            monthly_data[ym] = {}
        monthly_data[ym][agent_name or "Unknown"] = float(earnings or 0.0)

    # Convert to list of months with agent breakdown
    result = [
        {
            "month": month,
            "agents": monthly_data[month]
        }
        for month in sorted(monthly_data.keys())
    ]

    return jsonify(result)


