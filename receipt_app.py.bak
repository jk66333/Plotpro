def get_projects():
    """
    Return a sorted list of project names from the 'projects' table.
    This function tries two common column names: 'name' and 'project_name'.
    If neither works it returns an empty list (safe fallback).
    """
    try:
        conn = sqlite3.connect(DB_PATH)
        c = conn.cursor()

        # Try 'name' first
        try:
            c.execute("SELECT name FROM projects WHERE name IS NOT NULL ORDER BY name COLLATE NOCASE")
            rows = c.fetchall()
            if rows:
                conn.close()
                return [r[0].strip() for r in rows if r and r[0] and str(r[0]).strip()]
        except Exception:
            # ignore and try next option
            pass

        # Try 'project_name' column
        try:
            c.execute("SELECT project_name FROM projects WHERE project_name IS NOT NULL ORDER BY project_name COLLATE NOCASE")
            rows = c.fetchall()
            conn.close()
            return [r[0].strip() for r in rows if r and r[0] and str(r[0]).strip()]
        except Exception:
            conn.close()
            return []
    except Exception as e:
        # safe fallback
        print("get_projects() error:", e)
        return []


